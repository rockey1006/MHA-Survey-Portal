<%# Render a read-only survey layout similar to app/views/surveys/show.html.erb %>
<%# Make this partial robust: prefer a local `survey_response` if provided, then @survey_response. %>
<% sr = local_assigns[:survey_response] || (defined?(@survey_response) && @survey_response) || (defined?(survey_response) ? survey_response : nil) %>
<% survey = sr&.survey %>
<div class="space-y-8 rounded-2xl bg-white p-8 shadow-sm ring-1 ring-slate-200">
  <% survey_name =
    case survey&.id
    when 1 then "Current Residential and Executive MHA Track Study Survey"
    when 2 then "Competency Self-Assessment Survey"
    when 3 then "Final Feedback Survey"
    else survey&.title || "Survey ##{survey&.id}"
    end %>

  <h1 class="text-2xl font-semibold text-[#500000]"><%= survey_name %></h1>

  <dl class="grid gap-6 text-sm text-slate-700 md:grid-cols-2 lg:grid-cols-5">
    <div class="rounded-xl bg-slate-50 p-4 ring-1 ring-slate-200">
      <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Student</dt>
      <dd class="mt-2 text-base font-medium text-slate-900"><%= sr&.student&.user&.name || "Student ##{sr&.student_id}" %></dd>
    </div>
    <div class="rounded-xl bg-slate-50 p-4 ring-1 ring-slate-200">
      <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Advisor</dt>
      <dd class="mt-2 text-base font-medium text-slate-900"><%= sr&.advisor&.user&.name || (sr&.advisor_id ? "Advisor ##{sr.advisor_id}" : '—') %></dd>
    </div>
    <div class="rounded-xl bg-slate-50 p-4 ring-1 ring-slate-200">
      <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Survey</dt>
      <dd class="mt-2 text-base font-medium text-slate-900"><%= survey_name %></dd>
    </div>
    <div class="rounded-xl bg-slate-50 p-4 ring-1 ring-slate-200">
      <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Status</dt>
      <dd class="mt-2 text-base font-medium text-slate-900"><%= sr&.status.to_s.humanize %></dd>
    </div>
    <div class="rounded-xl bg-slate-50 p-4 ring-1 ring-slate-200">
      <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Submitted</dt>
      <dd class="mt-2 text-base font-medium text-slate-900"><%= sr&.completion_date ? sr.completion_date.strftime('%Y-%m-%d') : '—' %></dd>
    </div>
  </dl>

  <% existing_answers = sr&.question_responses&.index_by(&:question_id)&.transform_values(&:answer) || {} %>

  <% if survey.respond_to?(:categories) && survey.categories.any? %>
    <% q_number = 0 %>
    <div class="space-y-8">
      <% survey.categories.order(:id).each do |cat| %>
        <section class="space-y-4 rounded-2xl border border-slate-200 bg-slate-50/70 p-6 shadow-sm">
          <h3 class="text-xl font-semibold text-slate-800"><%= cat.name %></h3>

          <% if cat.questions.any? %>
            <div class="space-y-5">
              <% cat.questions.order(:question_order).each do |q| %>
                <% depends_on_qid = q.depends_on_question_id %>
                <% dependent_by_text = q.question.to_s.strip.match?(/^\s*If\s+(yes|no)/i) rescue false %>
                <% numbered = depends_on_qid.blank? && !dependent_by_text %>
                <% q_number += 1 if numbered %>

                <div class="space-y-3 rounded-xl border border-slate-200 bg-white p-4 shadow-sm" data-question-id="<%= q.id %>" data-numbered="<%= numbered %>">
                  <label class="flex items-start gap-2 text-sm font-medium text-slate-800">
                    <% if numbered %>
                      <span class="text-sm font-semibold text-[#500000]"><%= q_number %>.</span>
                    <% end %>
                    <span class="leading-6">
                      <%= q.question || "Question #{q.id}" %>
                      <% if numbered %>
                        <span class="ml-2 text-xs font-semibold uppercase tracking-wide text-rose-600">Required</span>
                      <% end %>
                    </span>
                  </label>

                  <% answer = existing_answers[q.id] %>
                  <% display = answer.is_a?(Array) ? answer.join(', ') : answer %>

                  <% case q.question_type %>
                  <% when 'short_answer' %>
                    <%= text_area_tag nil,
                                      (display || ''),
                                      class: "w-full max-w-full break-words rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-700 shadow-inner focus:outline-none disabled:cursor-not-allowed disabled:bg-slate-100 resize-none",
                                      rows: 3,
                                      disabled: true %>
                  <% when 'multiple_choice' %>
                    <% raw_opts = (q.answer_options || '').to_s %>
                    <% parsed = begin
                      JSON.parse(raw_opts) rescue nil
                    end %>
                    <% if parsed.is_a?(Array)
                         options = parsed.map(&:to_s)
                       else
                         options = raw_opts.gsub(/[\[\]\"“”]/, '').split(',').map(&:strip)
                       end %>
                    <% selected_vals = if display.is_a?(Array)
                                         display.map(&:to_s)
                                       else
                                         [display.to_s]
                                       end %>
                    <div class="flex flex-wrap items-center gap-2" role="group" aria-label="Options">
                      <% options.each do |opt| %>
                        <% checked = selected_vals.include?(opt.to_s) %>
                        <% container_classes = if checked
                                                "border-[#500000] bg-[#f9f2f2] text-[#500000]"
                                              else
                                                "border-slate-200 bg-white text-slate-600"
                                              end %>
                        <div class="flex items-center gap-2 rounded-full border px-3 py-1 text-sm font-medium shadow-sm <%= container_classes %>" aria-disabled="true" data-checked="<%= checked %>">
                          <span class="text-lg"><%= checked ? '◉' : '○' %></span>
                          <span><%= opt %></span>
                        </div>
                      <% end %>
                    </div>
                  <% when 'scale' %>
                    <% options = (1..5).to_a.map(&:to_s) %>
                    <%= select_tag nil,
                                    options_for_select(options, display&.to_s),
                                    include_blank: true,
                                    class: "w-full max-w-xs rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:outline-none disabled:cursor-not-allowed disabled:bg-slate-100 disabled:text-slate-600",
                                    disabled: true %>
                  <% when 'evidence' %>
                    <% value = display || '' %>
                    <div class="space-y-2">
                      <label class="text-sm font-medium text-slate-700">Google Drive link (file or folder):</label>
                      <%= text_field_tag nil,
                                         value,
                                         class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:outline-none disabled:cursor-not-allowed disabled:bg-slate-100 disabled:text-slate-600",
                                         placeholder: 'https://drive.google.com/...',
                                         disabled: true %>
                      <% if value.present? && value.to_s =~ %r{\Ahttps?://}i %>
                        <div class="text-sm"><a class="text-[#500000] underline hover:text-[#330000]" href="<%= value %>" target="_blank" rel="noopener noreferrer"><%= value %></a></div>
                      <% end %>
                    </div>
                  <% else %>
                    <%= text_field_tag nil,
                                       (display || ''),
                                       class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:outline-none disabled:cursor-not-allowed disabled:bg-slate-100 disabled:text-slate-600",
                                       disabled: true %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="rounded-lg border border-dashed border-slate-300 bg-white p-4 text-sm text-slate-600">No questions for this competency.</p>
          <% end %>

          <% latest_cat_link = nil %>
          <% cat.questions.each do |cq| %>
            <% if cq.question_type == 'evidence' && existing_answers[cq.id].present? %>
              <% latest_cat_link = existing_answers[cq.id]; break %>
            <% end %>
          <% end %>
          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-700">Evidence for this competency (if any):</label>
            <%= text_field_tag nil,
                               (latest_cat_link || ''),
                               class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:outline-none disabled:cursor-not-allowed disabled:bg-slate-100 disabled:text-slate-600",
                               disabled: true %>
            <% if latest_cat_link.present? %>
              <div class="text-sm"><a class="text-[#500000] underline hover:text-[#330000]" href="<%= latest_cat_link %>" target="_blank" rel="noopener noreferrer"><%= latest_cat_link %></a></div>
            <% end %>
          </div>
        </section>
      <% end %>
    </div>
  <% else %>
    <div class="space-y-2 rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <label class="text-sm font-semibold text-slate-700">Sample free text</label>
      <%= text_area_tag nil,
                        (sr&.question_responses&.first&.answer || ''),
                        class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:outline-none disabled:cursor-not-allowed disabled:bg-slate-100 resize-none",
                        disabled: true %>
    </div>
  <% end %>
</div>
