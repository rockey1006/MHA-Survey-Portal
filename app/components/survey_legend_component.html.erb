<aside class="survey-legend" aria-label="Rating scale reference">
  <div class="max-h-[calc(100vh-6rem)] overflow-y-auto rounded-xl border border-slate-200 bg-white shadow-sm">
    <div class="survey-legend-header px-6 py-4 lg:pr-20">
      <h3 class="survey-legend-title text-sm font-semibold tracking-tight"><%= title %></h3>
    </div>
    <div class="px-6 py-5 lg:pr-20">
      <div class="legend-content text-sm leading-relaxed text-slate-700">
        <%= helpers.render_guidance_text(@legend.body, heading_tag: :h3) %>
      </div>
    </div>
  </div>
</aside>
