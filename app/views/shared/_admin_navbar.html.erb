      <div class="logo">
        <div class="logo-icon"></div>
        <div class="logo-text">
          TEXAS A&M<br>
          UNIVERSITY
        </div>
      </div>
      
      <nav class="nav-links">
        <a href="<%= admin_dashboard_path %>" class="nav-link <%= 'active' if local_assigns[:active_page] == 'home' %>">Home</a>
        <%= link_to "Student Records", student_records_path,
        class: "nav-link #{'active' if local_assigns[:active_page] == 'students'}" %>
