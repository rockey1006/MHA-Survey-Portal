<%= form_with(model: feedback) do |form| %>
  <% if feedback.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :student_id, "Student", style: "display: block" %>
    <%= form.collection_select :student_id, Student.order(:student_id), :student_id, :full_name, include_blank: true %>
  </div>

  <div>
    <%= form.label :advisor_id, "Advisor", style: "display: block" %>
    <%= form.collection_select :advisor_id, Advisor.order(:advisor_id), :advisor_id, :display_name, include_blank: true %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.label :survey_id, "Survey", style: "display: block" %>
    <%= form.collection_select :survey_id, Survey.order(:title), :id, :title, include_blank: true %>
  </div>

  <div>
    <%= form.label :average_score, style: "display: block" %>
    <%= form.number_field :average_score, step: 0.1 %>
  </div>

  <div>
    <%= form.label :comments, style: "display: block" %>
    <%= form.text_field :comments %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
