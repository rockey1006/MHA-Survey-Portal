<!-- Advisor Navigation Header -->
<header class="app-header" role="banner">
  <% if impersonating? %>
    <div class="flash flash__warning impersonation-banner" role="status">
      <div class="flex items-center justify-between gap-3">
        <div class="min-w-0">
          Viewing as <strong><%= current_user&.display_name %></strong> (read-only)
          <% if impersonator_user.present? %>
            <span class="opacity-80">‚Äî signed in as <%= impersonator_user.display_name %></span>
          <% end %>
        </div>
        <%= link_to "Exit view",
                    advisor_impersonation_path,
                    method: :delete,
                    class: "underline whitespace-nowrap" %>
      </div>
    </div>
  <% end %>

  <div class="header-content">
    <div class="header-left">
      <%= link_to advisor_dashboard_path, class: "logo", aria: { label: "Texas A&M University home" } do %>
        <div class="logo-icon" aria-hidden="true"></div>
        <span class="sr-only">Texas A&amp;M University</span>
      <% end %>
      
      <nav class="nav-links" aria-label="Primary">
        <a href="<%= advisor_dashboard_path %>"
           class="nav-link <%= 'active' if local_assigns[:active_page] == 'home' %>">
          Home
        </a>

        <%= link_to "Student Records",
                    student_records_path,
                    class: "nav-link #{'active' if local_assigns[:active_page] == 'students'}" %>

        <%= link_to "Surveys",
                    advisors_surveys_path,
                    class: "nav-link #{'active' if local_assigns[:active_page] == 'surveys'}" %>
      </nav>
    </div>

    <div class="user-section">
      <%= render ToggleSwitchComponent.new(
        id: "high-contrast-toggle",
        checked: false,
        label: "High Contrast",
        data: { high_contrast_toggle: true }
      ) %>

      <%= render ToggleSwitchComponent.new(
        id: "tts-toggle",
        checked: false,
        label: "Read Aloud",
        data: { tts_toggle: true }
      ) %>

      <%= render "shared/translate_toggle" %>

      <span class="role-badge advisor">ADVISOR</span>

      <div class="notification-area">
        <%= render "shared/notification_menu" %>
      </div>

      <% avatar_url = current_user&.avatar_url.presence %>
      <div class="user-profile">
        <div class="user-avatar" title="<%= current_user&.full_name %>">
          <% if avatar_url %>
            <img src="<%= avatar_url %>" alt="<%= avatar_aria_label(current_user) %>" loading="lazy">
          <% else %>
            <span aria-hidden="true">üë§</span>
            <span class="sr-only"><%= avatar_aria_label(current_user) %></span>
          <% end %>
        </div>

        <div class="profile-dropdown">
          <div class="profile-header">
            <div class="user-avatar">
              <% if avatar_url %>
                <img src="<%= avatar_url %>" alt="<%= avatar_aria_label(current_user) %>" loading="lazy">
              <% else %>
                <span aria-hidden="true">üë§</span>
                <span class="sr-only"><%= avatar_aria_label(current_user) %></span>
              <% end %>
            </div>
            <div class="profile-info">
              <h3><%= current_user&.full_name || "Advisor" %></h3>
              <p><%= current_user&.email %></p>
            </div>
          </div>

          <div class="profile-menu">
            <%= link_to edit_account_path, class: "profile-menu-item" do %>
            <div class="profile-menu-icon" aria-hidden="true">üë§</div>
            <span>Account Information</span>
          <% end %>
            
            <%= link_to settings_path, class: "profile-menu-item" do %>
              <div class="profile-menu-icon" aria-hidden="true">‚öôÔ∏è</div>
              <span>Settings</span>
            <% end %>
            <%= link_to destroy_user_session_path,
                        method: :delete,
                        class: "profile-menu-item danger" do %>
              <div class="profile-menu-icon" aria-hidden="true">üö™</div>
              <span>Sign Out</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
