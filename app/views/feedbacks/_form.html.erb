<%= form_with(model: feedback) do |form| %>
  <% if feedback.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Hidden fields to help controller find the survey and student if the
      surrounding view doesn't include them in the URL/form context. The
      per-category form rendered in feedbacks/new will set category_id. %>
  <%= form.hidden_field :advisor_id, value: feedback.advisor_id || nil %>
  <%= form.hidden_field :survey_id, value: feedback.survey_id || nil %>
  <%= form.hidden_field :student_id, value: feedback.student_id || nil %>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.label :average_score, "Proficiency", style: "display: block" %>
    <%= render "shared/proficiency_select",
               id: "#{form.object_name}_average_score",
               name: "#{form.object_name}[average_score]",
               selected: normalize_proficiency_value(feedback.average_score) %>
  </div>

  <div data-controller="character-counter">
    <%= form.label :comments, "Feedback (optional)", style: "display: block" %>
    <%= form.text_area :comments,
                       rows: 3,
                       maxlength: Feedback::COMMENTS_MAX_LENGTH,
                       data: { "character-counter-target": "input", action: "input->character-counter#input" } %>
    <div style="margin-top: 4px; font-size: 12px; color: #64748b" data-character-counter-target="counter"><%= feedback.comments.to_s.length %>/<%= Feedback::COMMENTS_MAX_LENGTH %> characters</div>
  </div>

  <div>
    <%= form.submit "Save" %>
  </div>
<% end %>
