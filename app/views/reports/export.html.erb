                <div class="chart-horizontal__value" style="flex: 0 0 70px; font-size: 0.9rem; color: #0f172a; text-align: right;">
                  <%= entry[:achieved_percent].present? ? number_to_percentage(entry[:achieved_percent], precision: 1) : "—" %>
