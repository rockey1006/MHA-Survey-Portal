<!-- Student Navigation Header -->
<header class="app-header">
  <div class="header-content">
    <div class="header-left">
      <div class="logo">
        <div class="logo-icon"></div>
        <div class="logo-text">
          TEXAS A&M<br>
          UNIVERSITY
        </div>
      </div>
      <nav class="nav-links">
        <%= link_to "Home", student_dashboard_path,
              class: "nav-link #{'active' if current_page?(student_dashboard_path)}" %>

        <%= link_to "Survey", surveys_path,
              class: "nav-link #{'active' if controller_name == 'surveys'}" %>
      </nav>
    </div>

    <div class="user-section">
  <div class="notification-area">
        <%= render "shared/notification_menu" %>
      </div>
      <div class="user-profile">
        <div class="user-avatar"
             title="<%= current_user&.full_name %>"
             <% if current_user&.avatar_url.present? %>
               style="background-image: url('<%= current_user.avatar_url %>');"
             <% end %>>
          <% unless current_user&.avatar_url.present? %>ğŸ‘¤<% end %>
        </div>

        <!-- Profile Dropdown -->
        <div class="profile-dropdown">
          <div class="profile-header">
            <div class="user-avatar"
                 <% if current_user&.avatar_url.present? %>
                   style="background-image: url('<%= current_user.avatar_url %>');"
                 <% end %>>
              <% unless current_user&.avatar_url.present? %>ğŸ‘¤<% end %>
            </div>
            <div class="profile-info">
              <h3><%= current_user&.full_name || "Student User" %></h3>
              <p><%= current_user&.email %></p>
            </div>
          </div>

          <div class="profile-menu">
            <div class="profile-menu-item">
              <div class="profile-menu-icon">ğŸ‘¤</div>
              <span>Account Information</span>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon">âš™ï¸</div>
              <span>Settings</span>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon">ğŸšª</div>
              <%= button_to destroy_user_session_path,
                            method: :delete,
                            form: { class: "inline-signout-form" },
                            class: "profile-menu-item danger profile-menu-button" do %>
                <span>Sign Out</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
