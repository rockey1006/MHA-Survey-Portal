<div class="mx-auto max-w-3xl py-8 px-4">
  <div class="bg-white shadow-sm rounded-lg border border-slate-200">
    <!-- Header -->
    <div class="border-b border-slate-200 px-6 py-4">
      <h1 class="text-2xl font-semibold text-slate-900">Account Information</h1>
      <p class="mt-1 text-sm text-slate-600">Your profile and academic information</p>
    </div>

    <!-- Profile Information -->
    <div class="px-6 py-6 space-y-6">
      <!-- Personal Information Section -->
      <div>
        <h2 class="text-lg font-medium text-slate-900 mb-4">Personal Information</h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-slate-500">Full Name</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @student.full_name %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-slate-500">Email</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @student.email %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-slate-500">UIN</dt>
            <dd class="mt-1 text-sm text-slate-900">
              <%= @student.uin.present? ? @student.uin : content_tag(:span, "Not provided", class: "text-slate-400 italic") %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-slate-500">Student ID</dt>
            <dd class="mt-1 text-sm text-slate-900"><%= @student.student_id %></dd>
          </div>
        </dl>
      </div>

      <!-- Academic Information Section -->
      <div class="pt-6 border-t border-slate-200">
        <h2 class="text-lg font-medium text-slate-900 mb-4">Academic Information</h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-slate-500">Major/Program</dt>
            <dd class="mt-1 text-sm text-slate-900">
              <%= @student.major.present? ? @student.major : content_tag(:span, "Not provided", class: "text-slate-400 italic") %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-slate-500">Program Track</dt>
            <dd class="mt-1 text-sm text-slate-900">
              <%= @student.track.present? ? @student.track : content_tag(:span, "Not assigned", class: "text-slate-400 italic") %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-slate-500">Advisor</dt>
            <dd class="mt-1 text-sm text-slate-900">
              <%= @student.advisor.present? ? @student.advisor.name : content_tag(:span, "Not assigned", class: "text-slate-400 italic") %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Account Details Section -->
      <div class="pt-6 border-t border-slate-200">
        <h2 class="text-lg font-medium text-slate-900 mb-4">Account Details</h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-slate-500">Member Since</dt>
            <dd class="mt-1 text-sm text-slate-900">
              <%= @student.created_at.strftime("%B %d, %Y") %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-slate-500">Last Updated</dt>
            <dd class="mt-1 text-sm text-slate-900">
              <%= @student.updated_at.strftime("%B %d, %Y") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Actions -->
    <div class="border-t border-slate-200 px-6 py-4 bg-slate-50 flex justify-end">
      <%= link_to edit_student_profile_path,
          class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm transition hover:bg-slate-50 focus:outline-none focus-visible:ring focus-visible:ring-slate-500/70" do %>
        <span>Edit Profile</span>
      <% end %>
    </div>
  </div>

  <!-- Back to Dashboard -->
  <div class="mt-4">
    <%= link_to student_dashboard_path, class: "text-sm text-blue-600 hover:text-blue-500" do %>
      ‚Üê Back to Dashboard
    <% end %>
  </div>
</div>
