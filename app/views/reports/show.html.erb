<main class="main-content">
  <div class="c-toolbar c-toolbar--spaced">
    <div class="c-toolbar__row">
      <% if current_user&.respond_to?(:role_admin?) && current_user.role_admin? %>
        <%= link_to "← Back", admin_dashboard_path, class: tailwind_button_classes(:secondary), data: { turbo: false } %>
      <% else %>
        <%= link_to "← Back", advisor_dashboard_path, class: tailwind_button_classes(:secondary), data: { turbo: false } %>
      <% end %>
    </div>
  </div>

  <section class="c-card dashboard-section u-stack u-stack--xl">
    <div class="section-header">
      <h1 class="section-title">Program Reports</h1>
      <p class="section-subtitle">Monitor cohort progress, advisor alignment, and competency trends in real time.</p>
    </div>

    <div
      class="reports-app-root c-card c-card--flush"
      data-controller="reports"
      data-reports-pdf-url-value="<%= export_reports_pdf_path("dashboard") %>"
      data-reports-excel-url-value="<%= export_reports_excel_path %>"
    ></div>

    <noscript>
      <p class="reports-noscript rounded-md bg-amber-100 px-4 py-3 text-sm font-medium text-amber-900">Analytics require JavaScript. Please enable it to view the interactive dashboard.</p>
    </noscript>
  </section>
</main>
