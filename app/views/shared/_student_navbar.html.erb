<!-- Student Navigation Header -->
<header class="app-header">
  <div class="header-content">
    <div class="header-left">
      <div class="logo">
        <div class="logo-icon" aria-hidden="true"></div>
        <div class="logo-text">
          TEXAS A&M<br>
          UNIVERSITY
        </div>
      </div>
      <nav class="nav-links">
        <%= link_to "Home", student_dashboard_path,
              class: "nav-link #{'active' if current_page?(student_dashboard_path)}" %>

        <%= link_to "Survey", surveys_path,
              class: "nav-link #{'active' if controller_name == 'surveys'}" %>
      </nav>
    </div>

    <div class="user-section">
  <div class="notification-area">
        <%= render "shared/notification_menu" %>
      </div>
      <div class="user-profile">
        <% avatar_url = current_user&.avatar_url.presence %>
        <div class="user-avatar" title="<%= current_user&.full_name %>">
          <% if avatar_url %>
            <img src="<%= avatar_url %>" alt="<%= avatar_aria_label(current_user) %>" loading="lazy">
          <% else %>
            <span aria-hidden="true">üë§</span>
            <span class="sr-only"><%= avatar_aria_label(current_user) %></span>
          <% end %>
        </div>

        <!-- Profile Dropdown -->
        <div class="profile-dropdown">
          <div class="profile-header">
            <div class="user-avatar">
              <% if avatar_url %>
                <img src="<%= avatar_url %>" alt="<%= avatar_aria_label(current_user) %>" loading="lazy">
              <% else %>
                <span aria-hidden="true">üë§</span>
                <span class="sr-only"><%= avatar_aria_label(current_user) %></span>
              <% end %>
            </div>
            <div class="profile-info">
              <h3><%= current_user&.full_name || "Student User" %></h3>
              <p><%= current_user&.email %></p>
            </div>
          </div>

          <div class="profile-menu">
            <%= link_to student_profile_path, class: "profile-menu-item" do %>
              <div class="profile-menu-icon" aria-hidden="true">üë§</div>
              <span>Account Information</span>
            <% end %>
            <div class="profile-menu-item">
              <div class="profile-menu-icon" aria-hidden="true">‚öôÔ∏è</div>
              <span>Settings</span>
            </div>
            <%= link_to destroy_user_session_path,
                        method: :delete,
                        class: "profile-menu-item danger" do %>
              <div class="profile-menu-icon" aria-hidden="true">üö™</div>
              <span>Sign Out</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
