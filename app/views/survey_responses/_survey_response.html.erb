<%# Render a read-only survey layout similar to app/views/surveys/show.html.erb %>
<% sr = local_assigns[:survey_response] || (defined?(@survey_response) && @survey_response) %>
<% survey = sr&.survey %>
<% editable = local_assigns.key?(:editable) ? !!local_assigns[:editable] : false %>
<% answer_param_key = editable ? "answers" : "readonly_answers" %>
<% other_param_key = editable ? "other_answers" : "readonly_other_answers" %>
<% input_disabled = !editable %>
<% viewer_is_student_owner = local_assigns.fetch(:viewer_is_student_owner) do
     defined?(current_user) && current_user.present? && current_user.role == 'student' && sr&.student.present? && (current_user.id == sr.student.user&.id)
   end %>

<div class="space-y-8">
  <style>
    .survey-container [id^="survey-section-"],
    .survey-container [id^="survey-category-"],
    .survey-container .question-block {
      scroll-margin-top: 120px;
    }
    .survey-container .indented-description {
      border-left: 2px solid #e2e8f0;
      margin-left: 0.25rem;
      padding-left: 1rem;
    }
  </style>

  <% survey_name = survey&.title.presence || "Survey ##{survey&.id}" %>
  <% student_name = sr&.student&.full_name.to_s.strip.presence || sr&.student&.user&.display_name.to_s.strip.presence || sr&.student&.user&.name.to_s.strip.presence || sr&.student&.user&.email.to_s.strip.presence %>

  <header class="c-card survey-header mb-6">
    <div class="space-y-2">
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900"><%= survey_name %></h1>
      <% if student_name.present? && !viewer_is_student_owner %>
        <p class="text-sm text-slate-700">Student: <span class="font-semibold"><%= student_name %></span></p>
      <% end %>
      <p class="text-sm text-slate-600">
        Semester: <%= survey&.semester.presence || "TBD" %> · Tracks: <%= survey&.track_list.presence&.join(", ") || "Unassigned" %>
      </p>
      <p class="text-xs text-slate-500">
        Questions marked with an asterisk (*) are required.
      </p>
    </div>
  </header>

  <% existing_answers = (local_assigns[:existing_answers].presence || sr&.answers || {}) %>
  <% other_answers = (local_assigns[:other_answers] || {}).transform_keys(&:to_s) %>
  <% evidence_history = sr&.evidence_history_by_category || {} %>

  <% include_feedback_form = local_assigns.key?(:include_feedback_form) ? local_assigns[:include_feedback_form] : false %>
  <% passed_existing_feedbacks = local_assigns.key?(:existing_feedbacks_by_question) ? local_assigns[:existing_feedbacks_by_question] : @existing_feedbacks_by_question %>
  <%# Avoid relying on a potentially partially-loaded association proxy.
      This ensures newly-added categories/questions show up immediately in preview/read-only.
  %>
  <% categories = survey.present? ? Category.where(survey_id: survey.id).includes(:section, :questions).order(:id).to_a : [] %>

  <%# Read-only survey response pages should show advisor feedback directly under the
      parent + sub-question group (when feedback exists). %>
  <% feedbacks = Feedback.where(student_id: sr&.student_id, survey_id: survey&.id)
                       .includes(:question, :advisor)
                       .order(updated_at: :desc, created_at: :desc) %>
  <% per_question_map = {} %>
  <% per_category_legacy = {} %>
  <% feedbacks.each do |fb| %>
    <% if fb.question_id.present? %>
      <% per_question_map[fb.question_id] ||= fb %>
    <% elsif fb.category_id.present? %>
      <% per_category_legacy[fb.category_id] ||= fb %>
    <% end %>
    <%# Try parse legacy JSON in comments if present for category-level legacy entries %>
    <% if fb.comments.present? && fb.category_id.present? %>
      <% begin %>
        <% parsed = JSON.parse(fb.comments) rescue nil %>
        <% if parsed.is_a?(Hash) %>
          <% parsed.each do |k, v| %>
            <% cid = k.to_i %>
            <% per_category_legacy[cid] ||= {} %>
            <% per_category_legacy[cid] = v %>
          <% end %>
        <% end %>
      <% rescue StandardError %>
      <% end %>
    <% end %>
  <% end %>

  <% if categories.any? %>
    <div class="space-y-8">
      <% rendered_section_ids = [] %>
      <% section_question_numbers = Hash.new(0) %>
      <% categories.each do |category| %>
        <% section = category.section %>
        <% if section.present? && !rendered_section_ids.include?(section.id) %>
          <% section_anchor_id = "survey-section-#{section.id}" %>
          <div class="c-card survey-section-card space-y-2 text-left">
            <p class="text-xs font-semibold uppercase tracking-wide text-amber-700">Section</p>
            <h2 class="survey-section-title text-xl font-bold"><%= section.title %></h2>
            <% if section.description.present? && !section.mha_competency? %>
              <p class="text-sm text-slate-700"><%= section.description %></p>
            <% end %>

            <% if section.mha_competency? %>
              <p class="mt-3 text-sm text-slate-700"><%= section.description %></p>
            <% end %>
          </div>
          <% rendered_section_ids << section.id %>
        <% end %>
        <div class="survey-block">
        <section id="survey-category-<%= category.id %>" class="c-card survey-category-card space-y-6">
          <header class="space-y-2">
            <h2 class="text-xl font-semibold tracking-tight text-slate-900"><%= category.name %></h2>
            <% category_desc = category.description.to_s.strip.presence %>
            <% if category_desc.present? %>
              <p class="indented-description text-sm text-slate-600"><%= category_desc.gsub(/\r?\n/, '<br>').html_safe %></p>
            <% end %>
          </header>

          <% if category.questions.any? %>
            <div class="space-y-5">
              <% number_key = section&.id || category.id %>
                <% ordered_questions = category.questions.ordered.to_a %>
                <% questions_by_id = ordered_questions.index_by(&:id) %>
                <% branch_parent_ids = ordered_questions.select(&:sub_question?).map(&:parent_question_id).compact.uniq %>
                <% ordered_questions.each_with_index do |question, q_index| %>
                  <% is_sub_question = question.sub_question? %>
                  <% next_question = ordered_questions[q_index + 1] %>

                  <% parent = is_sub_question ? questions_by_id[question.parent_question_id] : nil %>
                  <% parent_raw = parent ? (existing_answers[parent.id] || existing_answers[parent.id.to_s]) : nil %>
                  <% parent_value = parent_raw.is_a?(Hash) ? (parent_raw["answer"] || parent_raw[:answer] || parent_raw["value"] || parent_raw[:value] || parent_raw["text"] || parent_raw[:text] || parent_raw["link"] || parent_raw[:link]).to_s : parent_raw.to_s %>
                  <% parent_options = parent ? parent.answer_options_list.map { |opt| opt.to_s.strip.downcase } : [] %>
                  <% conditional_yes_no_child = parent.present? && parent.question_type == "multiple_choice" && parent_options.include?("yes") && parent_options.include?("no") %>
                  <% hide_branch_child = is_sub_question && conditional_yes_no_child && !parent_value.casecmp?("Yes") %>

                  <% question_number = section_question_numbers[number_key] %>
                  <% question_number = (section_question_numbers[number_key] += 1) unless is_sub_question %>
                  <% raw_answer = existing_answers[question.id] || existing_answers[question.id.to_s] %>
                  <%# Normalize stored shapes: prefer explicit `answer` for selection and `text`/`link` for display %>
                  <% answer_value = nil %>
                  <% answer_text = nil %>
                  <% rating_val = nil %>
                  <% if raw_answer.is_a?(Hash) %>
                    <% answer_value = raw_answer["answer"] || raw_answer["value"] || raw_answer[:answer] || raw_answer[:value] %>
                    <% answer_text = raw_answer["text"] || raw_answer[:text] || raw_answer["link"] || raw_answer[:link] || answer_value %>
                    <% rating_val = raw_answer["rating"] || raw_answer[:rating] %>
                  <% elsif raw_answer.is_a?(Array) %>
                    <% answer_value = raw_answer %>
                    <% answer_text = raw_answer.join(", ") %>
                  <% else %>
                    <% answer_value = raw_answer %>
                    <% answer_text = raw_answer %>
                  <% end %>
                  <% q_text = question.question_text.to_s.squish %>
                  <% desc_text = question.description.to_s.strip.presence %>
                  <% formatted_desc = desc_text.present? ? desc_text.gsub(/\r?\n/, '<br>').html_safe : nil %>

                <% # Compute if this question is required using the same logic as the controller %>
                <% required = question.is_required? %>
                <% if !required && question.choice_question? %>
                  <% options = question.answer_option_values.map(&:strip).map(&:downcase) %>
                  <% is_yes_no = (options == %w[yes no] || options == %w[no yes]) %>
                  <% is_flexibility_scale = question.question_text.to_s.downcase.include?("flexible") && (%w[1 2 3 4 5] - options).empty? %>
                  <% required = !(is_yes_no || is_flexibility_scale) %>
                <% end %>

                <% is_branch_parent = !is_sub_question && question.question_type == "multiple_choice" && branch_parent_ids.include?(question.id) %>
                <% if is_branch_parent %>
                  <% option_values = question.answer_options_list.map { |opt| opt.to_s.strip.downcase } %>
                  <% is_branch_parent = option_values.include?("yes") && option_values.include?("no") %>
                <% end %>
                <% branch_target_value = is_branch_parent ? "Yes" : nil %>
                <% branch_child_of = is_sub_question ? question.parent_question_id : nil %>

                <article class="question-block rounded-lg border border-slate-100 bg-slate-50/40 p-4 space-y-4 <%= question.sub_question? ? 'ml-6' : '' %> <%= hide_branch_child ? 'hidden' : '' %>"
                         <% if is_branch_parent %>
                           data-branch-parent="true"
                           data-branch-parent-id="<%= question.id %>"
                           data-branch-target-value="<%= branch_target_value %>"
                         <% end %>
                         <% if branch_child_of.present? %>
                           data-branch-child-of="<%= branch_child_of %>"
                         <% end %>>
                  <% question_prefix = section&.mha_competency? ? "#" : "Q" %>

                  <label class="flex w-full items-start justify-between gap-3 text-sm font-medium text-slate-900" for="question-<%= question.id %>">
                    <span class="flex min-w-0 items-start gap-2">
                      <% if is_sub_question %>
                        <span class="inline-flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-slate-100 text-xs font-semibold text-slate-600" aria-label="Sub-question">↳</span>
                      <% else %>
                        <span class="inline-flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-slate-200/70 text-xs font-semibold text-slate-700"><%= question_prefix %><%= question_number %></span>
                      <% end %>

                      <span class="min-w-0 flex flex-col gap-1">
                        <span class="flex min-w-0 flex-wrap items-center gap-2">
                          <span class="leading-snug"><%= q_text %></span>
                          <% if required %>
                            <span class="text-red-600" aria-hidden="true">*</span>
                          <% end %>
                        </span>

                        <% if formatted_desc.present? %>
                          <div class="indented-description text-xs leading-relaxed text-slate-600"><%= formatted_desc %></div>
                        <% end %>
                      </span>
                    </span>

                    <% effective_target_level = effective_competency_target_level(question: question, survey: survey, student: sr&.student) %>
                    <% if question.question_type_dropdown? && effective_target_level.present? %>
                      <span class="shrink-0 ml-auto text-right">
                        <span class="target-level-badge">Target Level: <%= effective_target_level %>/5</span>
                      </span>
                    <% end %>
                  </label>

                  <% case question.question_type %>
                  <% when "short_answer" %>
                    <div data-controller="character-counter">
                      <%= text_area_tag "#{answer_param_key}[#{question.id}]",
                                        (answer_text || ""),
                                        rows: 3,
                                        id: "question-#{question.id}",
                                        maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                                        data: { "character-counter-target": "input", action: "input->character-counter#input" },
                                        class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                                          disabled: input_disabled %>
                      <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter"><%= (answer_text || "").to_s.length %>/<%= StudentQuestion::TEXT_MAX_LENGTH %> characters</div>
                    </div>
                  <% when "multiple_choice" %>
                    <% option_pairs = question.answer_option_pairs.presence || [] %>
                    <% selected = answer_value.to_s %>
                    <div class="flex flex-col gap-2" role="radiogroup">
                      <% option_pairs.each do |label, value| %>
                        <label class="flex items-center gap-2 text-sm text-slate-800">
                            <%= radio_button_tag "#{answer_param_key}[#{question.id}]",
                                               value,
                                               (selected == value.to_s || selected.casecmp?(label.to_s)),
                                               id: "question-#{question.id}-#{label.parameterize}",
                                               class: "h-4 w-4 text-blue-600",
                                                 disabled: input_disabled %>
                          <span><%= label %></span>
                        </label>

                        <% requires_text = question.answer_option_requires_text?(value) %>
                        <% if requires_text %>
                          <% other_text = if editable
                                            other_answers[question.id.to_s].to_s
                                          else
                                            if raw_answer.is_a?(Hash)
                                              (raw_answer["text"] || raw_answer[:text] || raw_answer["other_text"] || raw_answer[:other_text]).to_s
                                            else
                                              ""
                                            end
                                          end %>
                          <% show_other = (selected == value.to_s) || selected.casecmp?(label.to_s) || selected.casecmp?("Other") || other_text.present? %>
                          <div class="ml-6 <%= show_other ? "" : "hidden" %>" data-other-input-wrapper data-other-for-question-id="<%= question.id %>" data-other-choice-value="<%= value %>" aria-hidden="<%= show_other ? "false" : "true" %>" data-controller="character-counter">
                            <%= text_field_tag "#{other_param_key}[#{question.id}]",
                                               other_text,
                                               id: "question-#{question.id}-other",
                                               placeholder: "Please describe...",
                                               maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                                               data: { "character-counter-target": "input", action: "input->character-counter#input" },
                                               class: "w-full max-w-xl rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                                               disabled: (input_disabled || !show_other) %>
                            <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter"><%= other_text.to_s.length %>/<%= StudentQuestion::TEXT_MAX_LENGTH %> characters</div>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  <% when "dropdown" %>
                    <% option_pairs = question.answer_option_pairs %>
                    <% selected_value = answer_value.to_s %>
                    <%= select_tag "#{answer_param_key}[#{question.id}]",
                                   options_for_select(option_pairs.map { |label, value| [label, value] }, selected_value),
                                   include_blank: true,
                                   disabled: input_disabled,
                                   id: "question-#{question.id}",
                                   class: "w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>

                    <% option_pairs.each do |label, value| %>
                      <% next unless question.answer_option_requires_text?(value) %>
                      <% other_text = if editable
                                        other_answers[question.id.to_s].to_s
                                      else
                                        if raw_answer.is_a?(Hash)
                                          (raw_answer["text"] || raw_answer[:text] || raw_answer["other_text"] || raw_answer[:other_text]).to_s
                                        else
                                          ""
                                        end
                                      end %>
                      <% show_other = (selected_value.to_s == value.to_s) || selected_value.casecmp?(label.to_s) || selected_value.casecmp?("Other") || other_text.present? %>
                      <div class="mt-2 max-w-xl <%= show_other ? "" : "hidden" %>" data-other-input-wrapper data-other-for-question-id="<%= question.id %>" data-other-choice-value="<%= value %>" aria-hidden="<%= show_other ? "false" : "true" %>" data-controller="character-counter">
                        <%= text_field_tag "#{other_param_key}[#{question.id}]",
                                           other_text,
                                           id: "question-#{question.id}-other-#{value.to_s.parameterize}",
                                           placeholder: "Please describe...",
                                           maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                                           data: { "character-counter-target": "input", action: "input->character-counter#input" },
                                           class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                                           disabled: (input_disabled || !show_other) %>
                        <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter"><%= other_text.to_s.length %>/<%= StudentQuestion::TEXT_MAX_LENGTH %> characters</div>
                      </div>
                    <% end %>
                  <% when "scale" %>
                    <% scale_labels = scale_labels_for(question) %>
                    <% scale_steps = [scale_labels.size, 1].max %>
                    <% raw_scale = answer_value.to_s.presence %>
                    <% slider_value = (raw_scale || ((scale_steps + 1) / 2.0).ceil.to_s).to_i.clamp(1, scale_steps) %>
                    <div class="survey-scale-input space-y-1">
                      <div class="flex items-center gap-3">
                        <span class="text-xs text-slate-500"><%= scale_labels.first || "Low" %></span>
                        <%= range_field_tag "#{answer_param_key}[#{question.id}]",
                                            slider_value,
                                            min: 1,
                                            max: scale_steps,
                                            step: 1,
                                            id: "question-#{question.id}",
                                            class: "w-full",
                                            disabled: input_disabled %>
                        <span class="text-xs text-slate-500"><%= scale_labels.last || "High" %></span>
                      </div>
                      <div class="flex justify-between text-[0.7rem] text-slate-500">
                        <% scale_labels.each do |label| %>
                          <span><%= label %></span>
                        <% end %>
                      </div>
                      <div class="text-xs text-slate-600">
                        Selected: <span><%= scale_label_for_value(question, slider_value) %></span>
                      </div>
                    </div>
                  <% when "evidence" %>
                    <% link_value = answer_text.to_s.strip.presence %>
                    <% if editable %>
                      <div data-controller="character-counter">
                        <%= text_field_tag "#{answer_param_key}[#{question.id}]",
                                           link_value.to_s,
                                           id: "question-#{question.id}",
                                           placeholder: "https://drive.google.com/...",
                                           maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                                           data: { "character-counter-target": "input", action: "input->character-counter#input" },
                                           class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                                           disabled: input_disabled %>
                        <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter"><%= link_value.to_s.length %>/<%= StudentQuestion::TEXT_MAX_LENGTH %> characters</div>
                      </div>
                    <% elsif link_value.present? %>
                      <%= link_to link_value,
                                  link_value,
                                  class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 break-all",
                                  target: "_blank",
                                  rel: "noopener noreferrer" %>
                    <% else %>
                      <div data-controller="character-counter">
                        <%= text_field_tag "#{answer_param_key}[#{question.id}]",
                                           "",
                                           id: "question-#{question.id}",
                                           placeholder: "https://drive.google.com/...",
                                           maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                                           data: { "character-counter-target": "input", action: "input->character-counter#input" },
                                           class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                                           disabled: input_disabled %>
                        <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter">0/<%= StudentQuestion::TEXT_MAX_LENGTH %> characters</div>
                      </div>
                    <% end %>
                  <% else %>
                    <div data-controller="character-counter">
                      <%= text_field_tag "#{answer_param_key}[#{question.id}]",
                                         (answer_text || ""),
                                         id: "question-#{question.id}",
                                         maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                                         data: { "character-counter-target": "input", action: "input->character-counter#input" },
                                         class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500",
                                         disabled: input_disabled %>
                      <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter"><%= (answer_text || "").to_s.length %>/<%= StudentQuestion::TEXT_MAX_LENGTH %> characters</div>
                    </div>
                  <% end %>

                </article>

                <%# Read-only: render existing advisor feedback under the end of each
                    parent question group (parent + any sub-questions). %>
                <% if !include_feedback_form && section&.mha_competency? %>
                  <% end_of_parent_group = if is_sub_question
                                             next_question.nil? || !next_question.sub_question? || next_question.parent_question_id != question.parent_question_id
                                           else
                                             next_question.nil? || !next_question.sub_question?
                                           end %>

                  <% if end_of_parent_group %>
                    <% feedback_question = is_sub_question ? questions_by_id[question.parent_question_id] : question %>
                    <% feedback_question_id = feedback_question&.id %>
                    <% supports_feedback = feedback_question && (!feedback_question.respond_to?(:has_feedback?) || feedback_question.has_feedback?) %>

                    <% if supports_feedback %>
                      <% next if viewer_is_student_owner && category.name.to_s.strip.downcase == 'employment information' %>
                      <% fb = feedback_question_id ? per_question_map[feedback_question_id] : nil %>
                      <% if fb.present? %>
                        <article class="question-block advisor-feedback-card mt-3 rounded-lg border p-4 shadow-sm space-y-2">
                          <div class="flex flex-wrap items-center justify-between gap-3">
                            <h5 class="text-sm font-semibold tracking-tight text-slate-900">Advisor feedback — #<%= question_number %></h5>
                            <p class="text-xs text-slate-600">Score: <%= fb.average_score != nil ? proficiency_label_for(fb.average_score, feedback_question) : '—' %></p>
                          </div>
                          <% if fb.comments.present? %>
                            <div class="text-sm text-slate-700 whitespace-pre-wrap break-words"><%= fb.comments %></div>
                          <% end %>
                          <div class="text-xs text-slate-500">By: <%= fb&.advisor&.user&.name || '—' %></div>
                        </article>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>

                <%# Advisor feedback entry is only collected for parent questions in the
                    "MHA Competency Self-Assessment" section (mirrors the completing-survey experience). %>
                <% if include_feedback_form && section&.mha_competency? %>
                  <% end_of_parent_group = if is_sub_question
                                             next_question.nil? || !next_question.sub_question? || next_question.parent_question_id != question.parent_question_id
                                           else
                                             next_question.nil? || !next_question.sub_question?
                                           end %>

                  <% if end_of_parent_group %>
                    <% feedback_question = is_sub_question ? questions_by_id[question.parent_question_id] : question %>
                    <% feedback_question_id = feedback_question&.id %>
                    <% supports_feedback = feedback_question && (!feedback_question.respond_to?(:has_feedback?) || feedback_question.has_feedback?) %>
                    <% existing_q = (feedback_question_id && passed_existing_feedbacks) ? passed_existing_feedbacks[feedback_question_id] : nil %>
                    <% question_prefix = section&.mha_competency? ? "#" : "Q" %>
                    <% if supports_feedback %>
                    <article class="question-block advisor-feedback-card mt-3 rounded-lg border p-4 shadow-sm space-y-3">
                    <div class="flex items-center justify-between gap-3">
                      <h5 class="text-sm font-semibold tracking-tight text-slate-900">Advisor feedback — <%= question_prefix %><%= question_number %></h5>
                      <p class="text-xs text-slate-500">Score 0–5, feedback optional</p>
                    </div>

                      <div class="grid grid-cols-1 gap-3 md:grid-cols-3">
                      <div>
                        <label class="mb-1 block text-xs font-medium text-slate-600" for="ratings_<%= feedback_question_id %>_average_score">Score (0–5)</label>
                        <%= render "shared/proficiency_select",
                                   id: "ratings_#{feedback_question_id}_average_score",
                                   name: "ratings[#{feedback_question_id}][average_score]",
                                   question: feedback_question,
                                   selected: normalize_proficiency_value(existing_q&.average_score),
                                   data: {
                                     advisor_feedback_score: true,
                                     program_target_level: effective_competency_target_level(question: feedback_question, survey: survey, student: sr&.student)
                                   },
                                   class_name: "w-full max-w-xs rounded-md border border-slate-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
                      </div>

                      <div class="md:col-span-2" data-controller="character-counter">
                        <label class="mb-1 block text-xs font-medium text-slate-600" for="ratings_<%= feedback_question_id %>_comments">Feedback (optional)</label>
                        <textarea id="ratings_<%= feedback_question_id %>_comments"
                                  name="ratings[<%= feedback_question_id %>][comments]"
                                  rows="3"
                                  maxlength="<%= Feedback::COMMENTS_MAX_LENGTH %>"
                                  data-character-counter-target="input"
                                  data-action="input->character-counter#input"
                                  class="w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"><%= existing_q&.comments.to_s %></textarea>
                        <div class="mt-1 text-xs text-slate-500" data-character-counter-target="counter"><%= existing_q&.comments.to_s.length %>/<%= Feedback::COMMENTS_MAX_LENGTH %> characters</div>
                      </div>
                    </div>

                    <% if existing_q %>
                      <input type="hidden" name="ratings[<%= feedback_question_id %>][id]" value="<%= existing_q.id %>" />
                      <input type="hidden" name="ratings[<%= feedback_question_id %>][lock_version]" value="<%= existing_q.lock_version %>" />
                    <% end %>
                  </article>
                    <% end %>
                  <% end %>
                <% end %>
                  <% if branch_child_of.present? && conditional_yes_no_child %>
                    <div class="h-6 <%= hide_branch_child ? 'hidden' : '' %>" aria-hidden="true" data-branch-child-of="<%= branch_child_of %>"></div>
                  <% else %>
                    <div class="h-6" aria-hidden="true"></div>
                  <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="rounded-lg border border-dashed border-slate-300 bg-white p-4 text-sm text-slate-600">No questions for this competency.</p>
          <% end %>
        </section>
        </div>
        <%# per-question feedback inputs are rendered inline with each question above %>
        <div class="h-14" aria-hidden="true"></div>
      <% end %>
    </div>
  <% else %>
    <div class="space-y-2 rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <label class="text-sm font-semibold text-slate-700">Response</label>
      <%= text_area_tag nil,
                        (sr&.question_responses&.first&.answer || ""),
                        maxlength: StudentQuestion::TEXT_MAX_LENGTH,
                        class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:outline-none", disabled: true %>
    </div>
  <% end %>

  <%# Ensure newly added sections appear even if they have no categories yet. %>
  <% if survey.present? %>
    <% SurveySection.where(survey_id: survey.id).ordered.each do |section| %>
      <% next if rendered_section_ids.include?(section.id) %>
      <div class="survey-block">
        <div id="survey-section-<%= section.id %>" class="c-card survey-section-card space-y-2 text-left">
          <p class="text-xs font-semibold uppercase tracking-wide text-amber-700">Section</p>
          <h2 class="survey-section-title text-xl font-bold"><%= section.title %></h2>
          <% if section.description.present? && !section.mha_competency? %>
            <p class="text-sm text-slate-700"><%= section.description %></p>
          <% end %>

          <% if section.mha_competency? %>
            <div class="mt-3 rounded-lg border border-rose-200 bg-rose-50/60 p-3 text-sm text-rose-800 space-y-2">
              <p>
                <%= section.description %>
              </p>
            </div>
          <% end %>
        </div>

        <div class="c-card survey-category-card mt-4 rounded-lg border border-dashed border-slate-300 bg-white p-4 text-sm text-slate-600">
          No competencies are configured in this section yet.
        </div>
      </div>
    <% end %>
  <% end %>

  <%# Legacy fallback: if there are only category-level legacy feedback entries, keep a minimal
      section at the bottom so older data doesn't disappear entirely. %>
  <% if !include_feedback_form && per_category_legacy.any? %>
    <section class="mt-6 rounded-2xl border border-amber-200 bg-amber-50/60 p-6 ring-1 ring-amber-200/40">
      <h3 class="text-lg font-semibold">Advisor feedback (legacy)</h3>
      <p class="mt-2 text-sm text-slate-700">This survey response contains older feedback entries that are not attached to individual questions.</p>
    </section>
  <% end %>
  
</div>
