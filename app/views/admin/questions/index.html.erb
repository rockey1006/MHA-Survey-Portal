<main class="main-content">
  <section class="dashboard-section">
    <div class="section-header">
      <div>
        <h1 class="section-title">Question Bank</h1>
        <p class="section-subtitle">Create, edit, and remove prompts that can be assigned to surveys.</p>
      </div>
      <div class="section-actions">
        <%= link_to "New Question", new_admin_question_path, class: "btn btn-primary" %>
        <%= link_to "Back to Surveys", admin_surveys_path, class: "btn" %>
      </div>
    </div>

    <div class="survey-list-card">
      <% if @questions.blank? %>
        <p class="empty-state">No questions have been created yet.</p>
      <% else %>
        <div class="survey-table-wrapper">
          <table class="survey-table">
            <thead>
              <tr>
                <th>Order</th>
                <th>Question</th>
                <th>Type</th>
                <th>Categories</th>
                <th>Surveys</th>
                <th class="actions-column">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @questions.each do |question| %>
                <tr class="survey-table-row">
                  <td class="survey-meta-cell"><%= question.question_order %></td>
                  <td class="survey-title"><%= question.question %></td>
                  <td class="survey-meta-cell"><%= question.question_type.humanize %></td>
                  <% category = question.category %>
                  <% survey = category&.survey %>
                  <td class="survey-meta-cell">
                    <% if category.present? %>
                      <span class="meta-chip"><%= category.name %></span>
                    <% else %>
                      <span class="meta-chip">Unassigned</span>
                    <% end %>
                  </td>
                  <td class="survey-meta-cell">
                    <% if survey.present? %>
                      <span class="meta-chip"><%= survey.title %></span>
                    <% else %>
                      <span class="meta-chip">Unassigned</span>
                    <% end %>
                  </td>
                  <td class="survey-table-actions">
                    <%= link_to "Edit", edit_admin_question_path(question), class: "btn btn-secondary" %>
                    <%= link_to "Delete", admin_question_path(question),
                      data: { turbo_method: :delete, turbo_confirm: "Delete this question? It will be removed from any surveys it's assigned to." },
                      class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </section>
</main>
