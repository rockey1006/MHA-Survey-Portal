<h3>Advisor Feedback (per-category)</h3>
<%= form_with url: feedbacks_path(survey_id: @survey.id, student_id: @student.id), local: true do |f| %>
  <div class="space-y-4">
    <%= render partial: 'survey_responses/survey_response', locals: { survey_response: @survey_response, include_feedback_form: true, existing_feedbacks_by_category: @existing_feedbacks_by_category, prefill: params[:prefill].present? } %>
  </div>

  <div class="mt-4">
    <%= f.submit "Save all categories", class: "btn btn-primary" %>
  </div>
<% end %>


