<!-- Advisor Navigation Header -->
<header class="app-header">
  <div class="header-content">
    <div class="header-left">
      <div class="logo">
        <div class="logo-icon"></div>
        <div class="logo-text">
          TEXAS A&M<br>
          UNIVERSITY
        </div>
      </div>
      
      <nav class="nav-links">
        <a href="<%= advisor_dashboard_path %>" class="nav-link <%= 'active' if local_assigns[:active_page] == 'home' %>">Home</a>

        <%= link_to "Student Records",
            student_records_path,
            class: "nav-link #{'active' if local_assigns[:active_page] == 'students'}" %>

        <%= link_to "Surveys",
            advisors_surveys_path,
            class: "nav-link #{'active' if local_assigns[:active_page] == 'surveys'}" %>

        <a href="#" class="nav-link <%= 'active' if local_assigns[:active_page] == 'reports' %>">Reports</a>
      </nav>
    </div>
    
    <div class="user-section">
      <span class="role-badge advisor">ADVISOR</span>
      <div class="notification-area">
        <%= render "shared/notification_menu" %>
      </div>
      <div class="user-profile">
        <div class="user-avatar" 
             <% if current_user&.avatar_url.present? %>
               style="background-image: url('<%= current_user.avatar_url %>');"
             <% end %>>
          <% unless current_user&.avatar_url.present? %>üë§<% end %>
        </div>
        
        <!-- Profile Dropdown -->
        <div class="profile-dropdown">
          <div class="profile-header">
            <div class="user-avatar" 
                 <% if current_user&.avatar_url.present? %>
                   style="background-image: url('<%= current_user.avatar_url %>');"
                 <% end %>>
              <% unless current_user&.avatar_url.present? %>üë§<% end %>
            </div>
            <div class="profile-info">
              <h3><%= current_user&.name || "Advisor User" %></h3>
              <p><%= current_user&.email %></p>
            </div>
          </div>
          
          <div class="profile-menu">
            <div class="profile-menu-item">
              <div class="profile-menu-icon">üë§</div>
              <%= link_to "Account Information", edit_account_path, class: "profile-menu-label" %>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon">‚öôÔ∏è</div>
              <span>Settings</span>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon">üö™</div>
              <%= button_to destroy_user_session_path,
                            method: :delete,
                            form: { class: "inline-signout-form" },
                            class: "profile-menu-item danger profile-menu-button" do %>
                <span>Sign Out</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
