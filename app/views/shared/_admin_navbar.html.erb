              <div class="profile-menu-icon">âš™ï¸</div>
              <span>Settings</span>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon">ğŸšª</div>
              <%= button_to destroy_user_session_path,
                            method: :delete,
                            form: { class: "inline-signout-form" },
