<% content_for :title, @notification.title %>

<div class="flex min-h-[calc(100vh-8rem)] w-full justify-center bg-slate-50 px-4 py-14 sm:py-20">
  <div class="w-full max-w-4xl space-y-12">
    <header class="rounded-2xl border border-slate-200 bg-slate-100 p-10 shadow-md">
      <div class="flex flex-col gap-10 lg:flex-row lg:items-start lg:justify-between">
        <div class="flex flex-1 items-start gap-6">
          <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-2xl bg-slate-200 text-[#500000]">
            <svg aria-hidden="true" class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 10-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m1 0v1a2 2 0 004 0v-1m-4 0h4" />
            </svg>
          </div>
          <div class="space-y-4">
            <div class="flex flex-wrap items-center gap-3">
              <p class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-600">Notification</p>
              <% if @notification.read? && @notification.read_at.present? %>
                <span class="inline-flex items-center gap-1.5 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
                  <svg aria-hidden="true" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 00-1.414 0L9 11.586 6.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l7-7a1 1 0 000-1.414z" clip-rule="evenodd" />
                  </svg>
                  Read
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1.5 rounded-full bg-[#f1dada] px-3 py-1 text-xs font-semibold text-[#500000]">
                  <span class="h-2 w-2 rounded-full bg-[#500000]"></span>
                  Unread
                </span>
              <% end %>
            </div>
            <h1 class="text-3xl font-semibold text-slate-900 sm:text-4xl"><%= @notification.title %></h1>
            <p class="text-sm leading-relaxed text-slate-600">
              <time datetime="<%= @notification.created_at.iso8601 %>"><%= @notification.created_at.to_fs(:long) %></time>
              <% if @notification.read_at.present? %>
                Â· Read <%= @notification.read_at.to_fs(:long) %>
              <% end %>
            </p>
          </div>
        </div>

        <div class="grid w-full max-w-sm grid-cols-1 gap-4 text-center text-sm font-medium md:grid-cols-2">
          <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
            <p class="text-[0.7rem] uppercase tracking-[0.2em] text-slate-600">Created</p>
            <p class="mt-3 text-sm font-semibold text-slate-900 leading-tight"><%= @notification.created_at.to_fs(:long) %></p>
          </div>
          <% if @notification.read_at.present? %>
            <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-6 shadow-sm">
              <p class="text-[0.7rem] uppercase tracking-[0.2em] text-emerald-600">Read</p>
              <p class="mt-3 text-sm font-semibold text-slate-900 leading-tight"><%= @notification.read_at.to_fs(:long) %></p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-10 flex flex-wrap items-center gap-4">
        <%= link_to notifications_path, class: "inline-flex items-center gap-2 rounded-full border border-slate-300 bg-white px-5 py-3 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:bg-slate-50" do %>
          <svg aria-hidden="true" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Back to notifications
        <% end %>
        <% if (target_path = @notification.target_path_for(current_user)).present? %>
          <%= link_to target_path, class: "inline-flex items-center gap-2 rounded-full bg-[#f1dada] px-5 py-3 text-sm font-semibold text-[#500000] transition hover:bg-[#e9cdcd]" do %>
            Open related record
            <svg aria-hidden="true" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414-1.414L13.586 11H4a1 1 0 110-2h9.586l-3.293-3.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </header>

    <section class="space-y-10">
      <div class="rounded-2xl border border-slate-200 bg-white p-10 shadow-sm">
        <div class="flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-100 text-slate-500">
            <svg aria-hidden="true" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-slate-900">Message Content</h2>
        </div>
        <div class="mt-6 rounded-xl border border-slate-200 bg-slate-50 p-8">
          <p class="text-base leading-relaxed text-slate-800 whitespace-pre-line"><%= @notification.message %></p>
        </div>
      </div>

      <% if (target_path = @notification.target_path_for(current_user)).present? %>
        <div class="rounded-2xl border border-slate-200 bg-white p-10 shadow-sm">
          <div class="flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
            <div class="flex items-center gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-[#f1dada] text-[#500000]">
                <svg aria-hidden="true" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414-1.414L13.586 11H4a1 1 0 110-2h9.586l-3.293-3.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="text-base font-semibold text-[#500000]">Related Record Available</h3>
                <p class="mt-1 text-sm text-slate-600">Jump to the connected record for additional context and follow-up.</p>
              </div>
            </div>
            <%= link_to target_path, class: "inline-flex items-center gap-2 rounded-full bg-[#f1dada] px-5 py-3 text-sm font-semibold text-[#500000] transition hover:bg-[#e9cdcd]" do %>
              Open Record
              <svg aria-hidden="true" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414-1.414L13.586 11H4a1 1 0 110-2h9.586l-3.293-3.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
