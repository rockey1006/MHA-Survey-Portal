<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.label :question, style: "display: block" %>
    <%= form.text_field :question %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, rows: 3 %>
    <small>Shown under the prompt for all viewers.</small>
  </div>

  <div>
    <%= form.label :tooltip_text, style: "display: block" %>
    <%= form.text_area :tooltip_text, rows: 2 %>
    <small>Displayed inside the tooltip icon when present.</small>
  </div>

  <div>
    <%= form.label :question_order, style: "display: block" %>
    <%= form.number_field :question_order %>
  </div>

  <div>
    <%= form.label :question_type, style: "display: block" %>
    <%= form.select :question_type, Question.question_types.keys.map { |key| [key.titleize, key] }, include_blank: true %>
  </div>

  <div>
    <%= form.label :answer_options, "Answer options", style: "display: block" %>
    <%= form.text_field :answer_options %>
    <small>Comma-separated list for multiple choice and scale questions.</small>
  </div>

  <% if form.object.respond_to?(:has_feedback) %>
    <div>
      <%= form.label :has_feedback, "Collect advisor feedback?", style: "display: block" %>
      <%= form.check_box :has_feedback %>
    </div>
  <% end %>

  <div>
    <% if question.persisted? %>
      <%= form.submit "Update Question" %>
    <% else %>
      <%= form.submit "Create Question" %>
    <% end %>
  </div>
<% end %>
