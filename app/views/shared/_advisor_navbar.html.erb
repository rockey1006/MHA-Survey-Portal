<!-- Advisor Navigation Header -->
<header class="app-header">
  <div class="header-content">
    <div class="header-left">
      <div class="logo">
        <div class="logo-icon"></div>
        <div class="logo-text">
          TEXAS A&M<br>
          UNIVERSITY
        </div>
      </div>
      
      <nav class="nav-links">
        <a href="<%= advisor_dashboard_path %>" class="nav-link <%= 'active' if local_assigns[:active_page] == 'home' %>">Home</a>
        <a href="#" class="nav-link">Student Records</a>
        <a href="#" class="nav-link">Surveys</a>
        <a href="#" class="nav-link">Reports</a>
      </nav>
    </div>
    
    <div class="user-section">
      <span class="role-badge advisor">ADVISOR</span>
      <div class="user-profile">
        <div class="user-avatar" 
             <% if current_admin&.avatar_url.present? %>
               style="background-image: url('<%= current_admin.avatar_url %>');"
             <% end %>>
          <% unless current_admin&.avatar_url.present? %>üë§<% end %>
        </div>
        
        <!-- Profile Dropdown -->
        <div class="profile-dropdown">
          <div class="profile-header">
            <div class="user-avatar" 
                 <% if current_admin&.avatar_url.present? %>
                   style="background-image: url('<%= current_admin.avatar_url %>');"
                 <% end %>>
              <% unless current_admin&.avatar_url.present? %>üë§<% end %>
            </div>
            <div class="profile-info">
              <h3><%= current_admin&.full_name || "Advisor User" %></h3>
              <p><%= current_admin&.email %></p>
            </div>
          </div>
          
          <div class="profile-menu">
            <div class="profile-menu-item">
              <div class="profile-menu-icon">üë§</div>
              <span>Account Information</span>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon">‚öôÔ∏è</div>
              <span>Settings</span>
            </div>
            <div class="profile-menu-item danger">
              <%= link_to destroy_admin_session_path, method: :delete, class: "profile-menu-item danger", style: "color: inherit; text-decoration: none;" do %>
                <div class="profile-menu-icon">üö™</div>
                <span>Sign Out</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>